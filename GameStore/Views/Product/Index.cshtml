@using GameStore.Core.Entities
@model IEnumerable<Products>
@{
    ViewData["Title"] = "Games";
}

<div class="container mt-4">
    <div class="row">
        <div class="col text-center">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <div class="img-container">
                                <img class="card-img-top" src="/media/products/@item.Image" alt="Card image cap">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title mb-3">@item.Name</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary btn-view" asp-controller="Details" asp-action="Index" asp-route-id="@item.Id">Перегляд</a>
                                        <a class="btn btn-sm btn-outline-secondary btn-add" asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id">В кошик</a>
                                    </div>
                                    <small class="text-muted">@item.Price.ToString("C")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .img-container {
        height: 300px; /* Задайте фіксовану висоту для контейнера зображення */
        overflow: hidden; /* Приховати зайві частини зображення, щоб вони не виходили за межі контейнера */
    }

    .card-img-top {
        object-fit: contain; /* Зберігаємо пропорції зображення та вибираємо зображення, яке повністю покриває контейнер */
        height: 100%; /* Забезпечуємо, щоб зображення заповнило всю висоту контейнера */
        width: 100%; /* Забезпечуємо, щоб зображення заповнило всю ширину контейнера */
    }
</style>

